<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.zeeshan.foodjar">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name="com.zeeshan.foodjar.activities.ShoppingCart"></activity>
        <activity android:name="com.zeeshan.foodjar.activities.ItemDetail" />
        <activity android:name="com.zeeshan.foodjar.activities.LoginUser" />
        <activity android:name="com.zeeshan.foodjar.activities.RegisterUser" />
        <activity android:name="com.zeeshan.foodjar.activities.OrderHistory" />
        <activity android:name="com.zeeshan.foodjar.activities.SearchItem" />
        <activity android:name="com.zeeshan.foodjar.activities.Splash">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>

</manifest>